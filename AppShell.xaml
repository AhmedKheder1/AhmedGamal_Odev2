<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AhmedGamal_Odev2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AhmedGamal_Odev2"
    Shell.FlyoutBehavior="Flyout"
    Title="AhmedGamal_Odev2"

    Shell.FlyoutBackgroundColor="Wheat"
    Shell.TitleColor="White"
    Shell.DisabledColor="Gray"
    Shell.UnselectedColor="Black"
    >

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
         FlyoutIcon="home.png"
        />

    <ShellContent
        Title="Kredi Hesaplama"
        FlyoutIcon="bank.png"
        ContentTemplate="{DataTemplate local:KrediHesaplama}"
        Route="KrediHesaplama" />

    <ShellContent
        Title="Vucut Kitle Indeksi"
        FlyoutIcon="calculate.png"
        ContentTemplate="{DataTemplate local:VucutKitleIndeksi}"
        Route="VucutKitleIndeksi" />

    <ShellContent
        Title="Renk Secici"
        FlyoutIcon="colors.png"
        ContentTemplate="{DataTemplate local:RenkSecici}"
        Route="RenkSecici" />

</Shell>
